Naive solution:
time: O(n*m)
space: O(1)

#include <stdio.h>
#include <string.h>

void search(char *txt, char *pattern) {
    int lenTxt = strlen(txt), lenPat = strlen(pattern);
    int j;
    for(int i=0; i<lenTxt-lenPat; i++) {
        for(j=0; j<lenPat; j++) {
            if (txt[i+j] != pattern[j]) {break;}
        }
        if (j == lenPat) {printf("%d ", i);}
    }
    return;
}

int main() {
    search("abcdabcdabdc", "abc");
    return 0;
}
